<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <ImageView
            android:id="@+id/background"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toTopOf="@+id/background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/unit_text_view"
                style="@style/TextAppearance.MaterialComponents.Headline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/big_gap"
                tools:text="Unidad 1"
                android:textColor="@color/white"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/video_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                app:cardBackgroundColor="@color/orange"
                app:cardCornerRadius="@dimen/big_gap"
                android:layout_marginBottom="@dimen/default_gap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/video_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/video"
                        android:padding="@dimen/small_gap"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/video_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/default_gap"
                        android:paddingRight="@dimen/default_gap"
                        android:paddingBottom="@dimen/default_gap"
                        tools:text="Video: Tipos de variables\n\nEsta es una pequeña descripción de el contenido del video."
                        android:textColor="@color/background_color2"
                        android:background="@color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/exercise_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                app:cardBackgroundColor="@color/blue"
                app:cardCornerRadius="@dimen/big_gap"
                android:layout_marginBottom="@dimen/default_gap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/exercise_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/exercise"
                        android:padding="@dimen/small_gap"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/exercise_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/default_gap"
                        android:paddingRight="@dimen/default_gap"
                        android:paddingBottom="@dimen/default_gap"
                        tools:text="Ejercicios: Tipos de variables\n\nEsta es una pequeña descripción del ejercicio."
                        android:textColor="@color/background_color2"
                        android:background="@color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/slides_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                app:cardBackgroundColor="@color/teal_200"
                app:cardCornerRadius="@dimen/big_gap"
                android:layout_marginBottom="@dimen/default_gap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/slides_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/slides"
                        android:padding="@dimen/small_gap"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/slies_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/default_gap"
                        android:paddingRight="@dimen/default_gap"
                        android:paddingBottom="@dimen/default_gap"
                        tools:text="Ejercicios: Tipos de variables\n\nEsta es una pequeña descripción del ejercicio."
                        android:textColor="@color/background_color2"
                        android:background="@color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/glosary_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/default_gap"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="@dimen/big_gap"
                android:layout_marginBottom="@dimen/default_gap">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/glosary_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/glosary"
                        android:padding="@dimen/small_gap"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/glosary_text_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/default_gap"
                        android:paddingRight="@dimen/default_gap"
                        android:paddingBottom="@dimen/default_gap"
                        tools:text="Glosario\n\nEsta es una pequeña descripción del glosario."
                        android:textColor="@color/background_color2"
                        android:background="@color/white"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
<layout/>